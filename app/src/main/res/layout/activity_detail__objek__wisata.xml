<?xml version="1.0" encoding="utf-8"?>
<!--tambahkan id-->
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailObjekWisata"
        android:id="@+id/linearLayoutID">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include
                android:id="@+id/tToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/my_toolbar"
                android:layout_alignParentTop="true"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="250dp"
                   android:id="@+id/iv_gambar"
                   android:layout_below="@+id/tToolbar"
                   android:scaleType="fitXY"
                   android:src="@drawable/tugujogja"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/iv_gambar"
                  android:textSize="24dp"
                  android:textStyle="bold"
                  android:text="Yogyakarta"
                  android:id="@+id/tv_judul"
                  android:paddingRight="15dp"
                  android:paddingLeft="15dp"
                  android:paddingTop="25dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/tv_judul"
                  android:text="@string/penjelasan"
                  android:id="@+id/tv_penjelasan"
                  android:padding="15dp"/>

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab"
                android:src="@drawable/ic_navigation"
                android:layout_margin="10dp"
                android:layout_below="@id/iv_gambar"
                android:layout_alignParentRight="true"
                app:fabSize="normal"/>

    </RelativeLayout>

</ScrollView>